<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vanilla WebComponent</title>
    <style>
        body {
            background: linear-gradient(to bottom, #020111 60%,#20202c 100%);
            background-repeat: no-repeat;
            color: white;
            height: 100vh;
            padding-top: 10vh;
            padding-left: 24px;
            padding-right: 24px;
            display: flex;
            justify-content: center;
        }
        .body-content {            
            height: 50vh;
        }
    </style>
</head>
<body>    
    <div>
        <div class="container body-content">
            @RenderBody()
        </div>
        <div>
            <hr />
            <footer>
                <p>&copy; 2017 - Vanilla WebComponent</p>
            </footer>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
